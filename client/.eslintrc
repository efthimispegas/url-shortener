{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["import", "jsx-a11y", "promise", "react", "@typescript-eslint"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {},
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["src", "node_modules"],
            "extensions": [".js", ".json", ".jsx", ".css", ".scss", ".ts", ".tsx"]
          }
        }
      }
    }
  },
  "rules": {
    "arrow-body-style": ["off"],
    "implicit-arrow-linebreak": "off",
    "array-bracket-spacing": "off",
    "max-len": ["warn", { "code": 120 }],
    "arrow-parens": ["error", "always"],
    "class-methods-use-this": "off",
    "operator-linebreak": "off",
    "curly": ["error", "all"],
    "func-names": ["error", "as-needed"],
    "function-paren-newline": "off",
    "import/extensions": ["error", "never", { "css": "ignorePackages" }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "import/prefer-default-export": ["off"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "jsx-a11y/label-has-for": ["off"],
    "jsx-a11y/click-events-have-key-events": ["off"],
    "keyword-spacing": ["error", { "after": true, "before": true }],
    "linebreak-style": ["error", "unix"],
    "new-cap": ["off"],
    "no-console": ["off"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 10 }],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-multi-spaces": ["error"],
    "no-trailing-spaces": ["error"],
    "no-param-reassign": ["error", { "props": false }],
    "no-nested-ternary": ["off"],
    "no-underscore-dangle": ["off"],
    "no-unused-vars": "off",
    "no-debugger": "off",
    "no-return-assign": "off",
    "no-use-before-define": ["off"],
    "object-curly-newline": ["error", { "consistent": true }],
    "object-curly-spacing": ["error", "always"],
    "promise/param-names": ["error"],
    "promise/no-return-in-finally": ["error", "always"],
    "promise/no-return-wrap": ["error"],
    "react/destructuring-assignment": ["off"],
    "react/jsx-props-no-spreading": "off",
    "react/forbid-prop-types": ["off", { "forbid": ["object"] }],
    "react/jsx-one-expression-per-line": ["off"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".ts", ".tsx"] }],
    "react/prop-types": ["off"],
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "template-curly-spacing": "off",
    "yoda": ["error", "always"],
    "@typescript-eslint/explicit-module-boundary-types": "off"
  }
}
